[Unit]
Description=Open jack playback ports to ALSA card %I via zita-ajbridge
BindsTo=jack.service
After=jack.service
ConditionFileNotEmpty=%E/jack/conf.env

[Service]
EnvironmentFile=%E/jack/conf.env
ExecStartPre=/usr/bin/jack_wait -w
ExecStart=/usr/bin/zita-j2a -j "%I" -d "%I" -c 2 -r ${JACK_RATE} -p ${JACK_PERIOD} -n ${JACK_NPERIODS} 

[Install]
WantedBy=default.target
WantedBy=jack.service
