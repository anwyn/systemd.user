#!/bin/sh

doexport=
if [ "$1" = "--export" ]
then
    doexport=true
    shift
fi

PLUGINS_ENV_FILE=${1:-~/.config/jack/plugins.env}
if [ "$doexport" = "true" ]
then
    source ${PLUGINS_ENV_FILE}
    /bin/systemctl --user set-environment AUDIO_LIB="${AUDIO_LIB}" LADSPA_PATH="${LADSPA_PATH}" DSSI_PATH="${DSSI_PATH}" LV2_PATH="${LV2_PATH}" VST_PATH="${VST_PATH}"
else
    cat ${PLUGINS_ENV_FILE}
fi


